<Window x:Class="StateTrafficInspectorate.UnRegisteredUser.CheckLicenseDriver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StateTrafficInspectorate.UnRegisteredUser"
        mc:Ignorable="d"
        Title="Проверка статуса водительского удостоверения" Height="192" Width="369" Style="{StaticResource StyleWindow}">
    <Grid Background="#FFDFF0FA">
        <Label Content="Серия и номер ВУ" FontSize="16" HorizontalAlignment="Left" Margin="37,10,0,0" VerticalAlignment="Top" Width="155"/>
        <TextBox x:Name="license" HorizontalAlignment="Left" Height="31" Margin="197,10,0,0" MaxLength="10" TextWrapping="Wrap" FontSize="18" Text="" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="Check" Content="Проверить" FontSize="16" HorizontalAlignment="Left" Margin="197,65,0,0" VerticalAlignment="Top" Width="122" Height="55" Click="Check_Click"/>
        <Button x:Name="Back" Content="Назад" FontSize="16" HorizontalAlignment="Left" Margin="37,65,0,0" VerticalAlignment="Top" Width="122" Height="55" Click="Back_Click"/>

    </Grid>
</Window>
