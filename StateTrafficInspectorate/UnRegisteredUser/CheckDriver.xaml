<Window x:Class="StateTrafficInspectorate.UnRegisteredUser.CheckDriver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StateTrafficInspectorate.UnRegisteredUser"
        mc:Ignorable="d"
        Title="Проверка водителя" Height="148" Width="349.4" Style="{StaticResource StyleWindow}">
    <Grid Background="#FFDFF0FA">
        <Label Content="Серия и номер ВУ" FontSize="16" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="License" HorizontalAlignment="Left" Height="31" Margin="175,10,0,0" TextWrapping="Wrap" Text="" FontSize="16" MaxLength="10" VerticalAlignment="Top" Width="155"/>
        <Button x:Name="Check" Content="Проверить" FontSize="18" HorizontalAlignment="Left" Margin="175,46,0,0" VerticalAlignment="Top" Width="155" Height="54" Click="Check_Click"/>
        <Button x:Name="Back" Content="Назад" FontSize="18" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="143" Height="54" Click="Back_Click"/>

    </Grid>
</Window>
