<Window x:Class="StateTrafficInspectorate.Setting.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StateTrafficInspectorate.Setting"
        mc:Ignorable="d"
        Title="Авторизация в настройки приложения" Height="277" Width="344">
    <Grid Margin="0,0,438,-3">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,9,-110,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Пароль"  HorizontalAlignment="Left" Margin="10,50,-110,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="23" Margin="110,13,-325,0" TextWrapping="Wrap" MaxLength="20" Text="" VerticalAlignment="Top" Width="215"/>
        <PasswordBox x:Name="Password" MaxLength="20" HorizontalAlignment="Left" Margin="110,56,-325,0" VerticalAlignment="Top" Width="215" Height="25"/>
        <Button x:Name="Auth" Content="Вход" HorizontalAlignment="Left" Margin="10,92,-325,0" VerticalAlignment="Top" Width="315" Height="58" Click="Auth_Click"/>
        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" Margin="10,165,-325,0" VerticalAlignment="Top" Width="315" Height="58" Click="Back_Click"/>

    </Grid>
</Window>
